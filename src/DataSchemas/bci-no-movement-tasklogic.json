{
   "definitions": {
      "Control": {
         "additionalProperties": false,
         "properties": {
            "baselineThreshold": {
               "default": 0,
               "description": "The threshold to be applied to the signal to define baseline",
               "minimum": 0.0,
               "title": "Baselinethreshold",
               "type": "number"
            },
            "gain": {
               "default": 1,
               "description": "The gain to be applied to the signal",
               "title": "Gain",
               "type": "number"
            },
            "lowPassCutOff": {
               "default": -1,
               "description": "Low pass cut off frequency(Hz)",
               "title": "Lowpasscutoff",
               "type": "number"
            },
            "highPassCutOff": {
               "default": -1,
               "description": "High pass cut off frequency(Hz)",
               "title": "Highpasscutoff",
               "type": "number"
            }
         },
         "title": "Control",
         "type": "object"
      },
      "Point3d": {
         "additionalProperties": false,
         "properties": {
            "x": {
               "default": 0,
               "description": "X coordinate",
               "title": "X",
               "type": "number"
            },
            "y": {
               "default": 0,
               "description": "Y coordinate",
               "title": "Y",
               "type": "number"
            },
            "z": {
               "default": 0,
               "description": "Z coordinate",
               "title": "Z",
               "type": "number"
            }
         },
         "title": "Point3d",
         "type": "object"
      }
   },
   "additionalProperties": false,
   "properties": {
      "describedBy": {
         "title": "Describedby",
         "type": "string"
      },
      "schema_version": {
         "description": "schema version",
         "pattern": "^\\d+.\\d+.\\d+$",
         "title": "Version",
         "type": "string"
      },
      "valveOpenTime": {
         "default": 0.01,
         "description": "Time valve remains open (s)",
         "minimum": 0.0,
         "title": "Valveopentime",
         "type": "number"
      },
      "waitMicroscopeTime": {
         "default": 0,
         "description": "Interval (s) after the animal successfully exists the quiescence period.",
         "minimum": 0.0,
         "title": "Waitmicroscopetime",
         "type": "number"
      },
      "lowActivityTime": {
         "default": 1,
         "description": "Duration (s) BCI activity must stay low before starting a new trial.",
         "minimum": 0.0,
         "title": "Lowactivitytime",
         "type": "number"
      },
      "lickResponseTime": {
         "default": 2,
         "description": "Interval (s) for the animal to collect reward. Only applies if waitForLick is true.",
         "minimum": 0.0,
         "title": "Lickresponsetime",
         "type": "number"
      },
      "waitForLick": {
         "default": true,
         "description": "Determines whether the animal must lick to trigger reward delivery. If false, reward is immediately delivered.",
         "title": "Waitforlick",
         "type": "boolean"
      },
      "enableSoundOnRewardZoneEntry": {
         "default": true,
         "description": "Enables audio feedback on reward zone entry.",
         "title": "Enablesoundonrewardzoneentry",
         "type": "boolean"
      },
      "noMovementTimeBeforeTrial": {
         "default": 0,
         "description": "Interval (s) subjects must not move for to start a new trial.",
         "minimum": 0.0,
         "title": "Nomovementtimebeforetrial",
         "type": "number"
      },
      "interTrialInterval": {
         "default": 0,
         "description": "Interval (s) between trials.",
         "minimum": 0.0,
         "title": "Intertrialinterval",
         "type": "number"
      },
      "rewardConsumeTime": {
         "default": 2,
         "description": "Duration (s) for the animal to consume reward.",
         "minimum": 0.0,
         "title": "Rewardconsumetime",
         "type": "number"
      },
      "maxTrialDuration": {
         "default": 20,
         "description": "Maximum duration (s) of a trial.",
         "minimum": 0.0,
         "title": "Maxtrialduration",
         "type": "number"
      },
      "closePosition": {
         "default": 19,
         "description": "Position (mm) of the close position.",
         "minimum": 0.0,
         "title": "Closeposition",
         "type": "number"
      },
      "farPositionOffset": {
         "default": 8,
         "description": "Offset (mm) from the close position to the far position.",
         "minimum": 0.0,
         "title": "Farpositionoffset",
         "type": "number"
      },
      "manipulatorResetPosition": {
         "allOf": [
            {
               "$ref": "#/definitions/Point3d"
            }
         ],
         "default": {
            "x": 0.0,
            "y": 0.0,
            "z": 0.0
         },
         "description": "Position (mm) to reset the manipulator to."
      },
      "bciControl": {
         "allOf": [
            {
               "$ref": "#/definitions/Control"
            }
         ],
         "default": {
            "baselineThreshold": 0.0,
            "gain": 1.0,
            "lowPassCutOff": -1.0,
            "highPassCutOff": -1.0
         },
         "description": "BCI control parameters"
      },
      "noMovementControl": {
         "allOf": [
            {
               "$ref": "#/definitions/Control"
            }
         ],
         "default": {
            "baselineThreshold": 0.0,
            "gain": 1.0,
            "lowPassCutOff": -1.0,
            "highPassCutOff": -1.0
         },
         "description": "No movement control parameters"
      },
      "skip2pHandshake": {
         "default": false,
         "description": "Skip 2p handshake",
         "title": "Skip2Phandshake",
         "type": "boolean"
      },
      "punishOnMovementDuration": {
         "default": 0,
         "description": "The duration (s) that the spout will stop updating if the animal moves during the trial.",
         "minimum": 0.0,
         "title": "Punishonmovementduration",
         "type": "number"
      }
   },
   "required": [
      "describedBy",
      "schema_version"
   ],
   "title": "BciNoMovementTaskLogic",
   "type": "object"
}